{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
    <section class="container-fluid" id="user_page">
        <article class="row">
            <div class="col-md-3 col-lg-2 hasImage">
                {% if not app.user.image %}
                    <div class="no_image"><p>{{ app.user.username|first|upper}}</p></div>
                {% else %}
                    <img src="{{ app.user.image }}" alt="photo" class="rounded-circle">
                {% endif %}
            </div>
            <div class="col-md-8">
                <div>
                    <h3>{{ app.user.username }}</h3>
                    <h6>{{ app.user.email }}</h6>
                </div>
            </div>
        </article>

    </section>
{% endblock %}